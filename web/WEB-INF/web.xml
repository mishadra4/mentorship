<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <welcome-file-list>
        <welcome-file>/WEB-INF/view/page/login.jsp</welcome-file>
    </welcome-file-list>

    <error-page>
        <exception-type>exception.MissingFieldsException</exception-type>
        <location>/WEB-INF/view/error/errorpage.jsp</location>
    </error-page>

    <error-page>
        <exception-type>exception.AlreadyRegisteredException</exception-type>
        <location>/WEB-INF/view/error/AlreadyRegisteredError.jsp</location>
    </error-page>

    <error-page>
        <exception-type>exception.UnauthorizedPrincipalException</exception-type>
        <location>/WEB-INF/view/error/InvalidCredentialsError.jsp</location>
    </error-page>
</web-app>